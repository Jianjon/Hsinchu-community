rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Villages/Wiki collection - ALLOW PUBLIC WRITE FOR MIGRATION
    match /villages/{villageId} {
      allow read: if true;
      allow write: if true; // TEMPORARY FOR MIGRATION
    }
    
    // Projects collection - authenticated users can write
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Posts collection - authenticated users can write
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Mixboard Collections - Public read, authenticated write
    match /mixboard_pulse/{doc} {
       allow read: if true;
       allow write: if isAuthenticated();
    }
    
    // Default: Public Read, Authenticated Write
    match /{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
